# 데이터베이스 설정
DATABASE_URL="postgresql://username:password@localhost:5432/myplatform?schema=public"

# JWT 토큰 시크릿 (강력한 랜덤 문자열로 변경하세요)
JWT_SECRET="your-super-secret-jwt-key-here-change-this-to-a-strong-random-string"
NEXTAUTH_SECRET="your-nextauth-secret-here-change-this-to-a-strong-random-string"
NEXTAUTH_URL="http://localhost:3000"

# Google Translate API (선택사항 - 자동 번역 기능 사용시)
GOOGLE_TRANSLATE_API_KEY="your-google-translate-api-key"

# 파일 업로드 설정
UPLOAD_BASE_URL="http://localhost:3000"
UPLOAD_PATH="/public/uploads"

# 개발 환경 설정
NODE_ENV="development"

# Redis 설정 (선택사항 - 캐싱 성능 향상)
REDIS_URL="redis://localhost:6379"

# 이메일 설정 (선택사항 - 알림 기능 사용시)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# 결제 시스템 (선택사항)
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."

# 로그 레벨
LOG_LEVEL="info"