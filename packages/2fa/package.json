{
  "name": "@repo/2fa",
  "version": "1.0.0",
  "description": "Ultra-fine-grained two-factor authentication module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "2fa",
    "totp",
    "authentication",
    "security",
    "backup-codes"
  ],
  "dependencies": {
    "@repo/core": "file:../core",
    "@repo/storage": "file:../storage",
    "@repo/types": "file:../types",
    "@repo/utils": "file:../utils",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "crypto-js": "^4.2.0",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.1",
    "@types/qrcode": "^1.5.5",
    "@vitest/coverage-v8": "^1.0.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./totp": {
      "import": "./dist/totp/index.js",
      "require": "./dist/totp/index.js",
      "types": "./dist/totp/index.d.ts"
    },
    "./backup": {
      "import": "./dist/backup/index.js",
      "require": "./dist/backup/index.js",
      "types": "./dist/backup/index.d.ts"
    },
    "./recovery": {
      "import": "./dist/recovery/index.js",
      "require": "./dist/recovery/index.js",
      "types": "./dist/recovery/index.d.ts"
    },
    "./verification": {
      "import": "./dist/verification/index.js",
      "require": "./dist/verification/index.js",
      "types": "./dist/verification/index.d.ts"
    }
  }
}
